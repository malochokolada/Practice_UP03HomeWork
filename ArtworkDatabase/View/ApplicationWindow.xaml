<Window x:Class="ArtworkDatabase.View.ApplicationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ArtworkDatabase.View"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Картинная гелерея" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Border Background="DarkOliveGreen" Opacity="1">
            <StackPanel
                Opacity="1" HorizontalAlignment="Left" Orientation="Vertical" Grid.Row="0">
                <Label Content="{Binding Name}"/>
                <Label Content="{Binding Surname}"/>
                <Label Content="{Binding Age}"/>
            </StackPanel>
        </Border>
        
        
    </Grid>
</Window>
